<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <style>
            .alert {
                padding: 10px;
                color: white;
                text-align: center;
            }
            .alert-success {
                background-color: green;
            }
            .alert-error {
                background-color: red;
            }
            .alert-info {
                background-color: blue;
            }
        </style>
    </head>
    <body>
        {{ include('layouts/partials/_flash_message.html.twig') }}
        <nav>
            <ul>
                <a href="{{ path('app_home') }}"><li>Home</li></a>
                <a href="{{ path('app_pins_create') }}"><li>New Pin</li></a>
            </ul>
        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
